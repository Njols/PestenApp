
@{
    ViewData["Title"] = "AlternateCreateRuleSet";
}

<h2>AlternateCreateRuleSet</h2>
@model IEnumerable<Rule>
@using (Html.BeginForm("CreateRuleSet", "Home", FormMethod.Post))
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Card.Face);
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Card.Suit);
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RuleType);
                </th>
            </tr>
        </thead>
        <tbody id="childtable">
            @Html.EditorFor(model => Model);
        </tbody>
    </table>
    <div class="form-group">
        @Html.DropDownList("CardFace")
    </div>
    <div class="form-group">
        @Html.DropDownList("CardSuit")
    </div>
    <div class="form-group">
        @Html.DropDownList("CardRule")
    </div>
    <input id="addRuleButton" type="submit" value="Add Rule" />


}